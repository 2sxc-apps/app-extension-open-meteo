@inherits Custom.Hybrid.RazorTyped
@using AppCode.Extensions.OpenMeteo

@{
  var ds = Kit.Data.GetSource<OpenMeteoCurrent>(
    parameters: new {
      Latitude = 47.3769,
      Longitude = 8.5417,
      Timezone = "auto",
      Current = "temperature_2m,wind_speed_10m,weather_code"
    }
  );

  var item = AsItems(ds).FirstOrDefault();
}

<h3>Open-Meteo Current</h3>

@if (item == null)
{
  <p>No data</p>
}
else
{
  <ul>
    <li>Time: @item.String("Time")</li>
    <li>Temp: @item.Double("Temperature2m") Â°C</li>
    <li>Wind: @item.Double("WindSpeed10m")</li>
    <li>Code: @item.Double("WeatherCode")</li>
    <li>Lat/Lon: @item.Double("Latitude"), @item.Double("Longitude")</li>
    <li>Timezone: @item.String("Timezone")</li>
  </ul>
}
